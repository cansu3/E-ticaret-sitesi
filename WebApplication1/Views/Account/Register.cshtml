@model WebApplication1.Models.Account.RegisterModels
@{
    ViewBag.Title = "Register";
}

<div class="class">
    <div class="row my-3"></div>




    @using (Html.BeginForm())
    {
        <div class="col-md-4 offset-md-4 my-2 ">
            <div class="card " style="background-color : rgba(1, 153, 255, 0.25);">
                <div class="card-header">

                    <div class="row">
                        <div class="col-md-3 ">
                            <h2>
                                <i class="fas fa-user-plus  fa-stack-2x  "></i>
                            </h2>
                        </div>
                        <div class="col-md-9 text-right">

                            <h2>Kayıt</h2>
                            @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                            {
                                <small style="color:red;">@ViewBag.ReError</small>
                            }
                            else
                            {
                                <small>Lütfen bilgileri eksiksiz doldurunuz.</small>
                                }

                        </div>
                    </div>
                 <div>

                        <div class="card-body">
                            <div class="form-group">

                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Member.ad, new { @class = "form-control", placeholder = "Name", type = "text" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Member.soyad, new { @class = "form-control", placeholder = "Surname", type = "text" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Member.email, new { @class = "form-control", placeholder = "e-mail address", type = "email" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Member.şifre, new { @class = "form-control", placeholder = "password", type = "password" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.rePassword, new { @class = "form-control", placeholder = "re-password", type = "password" })
                                </div>

                            </div>
                            <div class="card-footer text-muted">
                                <button type="submit" class=" btn btn-primary mr-2">Kayıt Ol</button>
                                <a class="btn btn-success mr-2" href="@Url.Action("Login","Account")" role="button">Giriş Yap</a>






                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   

}



    </div>


